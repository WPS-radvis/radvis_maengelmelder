{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "start:frontend": "ng serve",
    "start:backend": "cd ../backend && ./mvnw spring-boot:run",
    "start:dev": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "test": "ng test --browsers=ChromeHeadless",
    "e2e": "npx playwright test",
    "e2e:headed": "npx playwright test --headed",
    "e2e:ci": "npx playwright test --reporter=junit",
    "linux-test": "ng test --browsers=ChromeHeadlessCI",
    "trunk": "trunk",
    "lint": "trunk check",
    "fmt": "trunk fmt",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.9",
    "@angular/cdk": "^20.2.9",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.9",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@bluehalo/ngx-leaflet": "^20.0.0",
    "@runette/ngx-leaflet-locate": "^2.0.7",
    "leaflet": "^1.9.4",
    "leaflet.locatecontrol": "^0.85.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.12",
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.3.6",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "^1.57.0",
    "@types/jasmine": "~5.1.0",
    "@types/leaflet": "^1.9.21",
    "chromium": "^3.0.3",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "puppeteer": "^24.26.1",
    "typescript": "~5.9.2"
  }
}
